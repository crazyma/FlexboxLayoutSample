<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <ripple android:color="@color/ripple_light">
            <item>
                <shape>
                    <solid android:color="@color/dcard_400"/>
                    <corners android:radius="32dp"/>
                    <padding
                        android:bottom="8dp"
                        android:left="12dp"
                        android:right="12dp"
                        android:top="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/ripple_dark">
            <item>
                <shape>
                    <solid android:color="@color/grey_200"/>
                    <corners android:radius="32dp"/>
                    <padding
                        android:bottom="8dp"
                        android:left="12dp"
                        android:right="12dp"
                        android:top="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>